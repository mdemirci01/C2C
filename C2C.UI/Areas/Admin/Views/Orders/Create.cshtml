@model C2C.Models.Order

@{
    ViewData["Title"] = "Yeni Sipariş";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CartId" class="control-label"></label>
                <select asp-for="CartId" class ="form-control" asp-items="ViewBag.CartId">
                    <option value="">Kart Seçiniz</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatus" class="control-label"></label>
                <select asp-for="OrderStatus" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(OrderStatus))">
                    <option value="">Siparişin Durumu</option>
                </select>
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CouponId" class="control-label"></label>
                <select asp-for="CouponId" class ="form-control" asp-items="ViewBag.CouponId">
                    <option value="">Kupon Seçiniz</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="OrderSubtotal" class="control-label"></label>
                <input asp-for="OrderSubtotal" class="form-control" />
                <span asp-validation-for="OrderSubtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountTotal" class="control-label"></label>
                <input asp-for="DiscountTotal" class="form-control" />
                <span asp-validation-for="DiscountTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingTotal" class="control-label"></label>
                <input asp-for="ShippingTotal" class="form-control" />
                <span asp-validation-for="ShippingTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxTotal" class="control-label"></label>
                <input asp-for="TaxTotal" class="form-control" />
                <span asp-validation-for="TaxTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderTotal" class="control-label"></label>
                <input asp-for="OrderTotal" class="form-control" />
                <span asp-validation-for="OrderTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-default" />
                <a asp-action="Index"  class="btn btn-sm btn-danger">İptal</a>
            </div>
        </form>
    </div>
</div>

