@model IEnumerable<C2C.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Yeni Ürün</a>
</p>
<table id="tblRecords" class="table" >
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AdditionalInformation)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.OldPrice)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsPublished)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Availibility)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.DeletedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.DeletedAt)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IpAddress)
            </th>
            <th class="text-nowrap all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionalInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OldPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpAddress)
            </td>
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Düzenle</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detaylar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-success">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
